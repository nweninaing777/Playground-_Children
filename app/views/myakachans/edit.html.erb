<div class="container">
  <div class="row">
<%= form_with(model: @myakachan, local: true) do |f| %>
  <% if @myakachan.errors.any? %>
    <div id="error_explanation">

      <ul>
      <% @myakachan.errors.full_messages.each do |message| %>
        <h2><%= message %></h2>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= image_tag(@myakachan.image.url) if @myakachan.image && @myakachan.image.url %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>


  <div class="field">
    <%= f.label :age%>
    <%= f.number_field :age %>
  </div>

  <div class="field">
    <%= f.label :gender %>
    <%= f.radio_button :gender, :male %>boy <%= f.radio_button :gender, :female %>girl
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

  <%= link_to 'Back', user_path(@myakachan.user_id) %>
<% end %>
  </div>
</div>
